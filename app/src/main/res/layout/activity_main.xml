<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.race.planner.activities.MainActivity"
    android:background="@drawable/splash_image_2"
    android:scaleType="centerCrop"
    android:orientation="vertical"
    android:gravity="bottom">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <LinearLayout
                android:id="@+id/view_pager_slide_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/text_box_background"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/string_main_intro_1"
                        android:text="@string/string_main_intro_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimary"
                        android:textSize="26sp"
                        android:textAlignment="center"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="sans-serif-light"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:src="@drawable/ic_chevron_right_white_48dp"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:alpha=".5"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_pager_slide_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/text_box_background"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:text="1."
                        android:textColor="@color/textPrimary"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="24dp"/>
                    <ImageView
                        android:id="@+id/left_arrow_2"
                        android:src="@drawable/ic_chevron_right_white_48dp"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:scaleX="-1"
                        android:layout_centerVertical="true"
                        android:alpha=".5"/>
                    <TextView
                        android:id="@+id/string_main_intro_2"
                        android:text="@string/string_main_intro_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimary"
                        android:textSize="26sp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-light"
                        android:padding="30dp"/>
                    <ImageView
                        android:id="@+id/right_arrow_2"
                        android:src="@drawable/ic_chevron_right_white_48dp"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:alpha=".5"/>


                    </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_pager_slide_3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/text_box_background"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:text="2."
                        android:textColor="@color/textPrimary"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="24dp"/>
                    <ImageView
                        android:id="@+id/left_arrow_3"
                        android:src="@drawable/ic_chevron_right_white_48dp"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:scaleX="-1"
                        android:layout_centerVertical="true"
                        android:alpha=".5"/>
                    <TextView
                        android:id="@+id/string_main_intro_3"
                        android:text="@string/string_main_intro_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimary"
                        android:textSize="26sp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-light"
                        android:padding="30dp"/>
                    <ImageView
                        android:id="@+id/right_arrow_3"
                        android:src="@drawable/ic_chevron_right_white_48dp"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:alpha=".5"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_pager_slide_4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/text_box_background"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:text="3."
                        android:textColor="@color/textPrimary"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="24dp"/>
                    <ImageView
                        android:id="@+id/left_arrow_4"
                        android:src="@drawable/ic_chevron_right_white_48dp"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:scaleX="-1"
                        android:layout_centerVertical="true"
                        android:alpha=".5"/>
                    <TextView
                        android:id="@+id/string_main_intro_4"
                        android:text="@string/string_main_intro_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimary"
                        android:textSize="26sp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-light"
                        android:padding="30dp"/>
                    <ImageView
                        android:id="@+id/right_arrow_4"
                        android:src="@drawable/ic_chevron_right_white_48dp"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:alpha=".5"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/view_pager_slide_5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/text_box_background"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:text="4."
                        android:textColor="@color/textPrimary"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="24dp"/>
                    <ImageView
                        android:id="@+id/left_arrow_5"
                        android:src="@drawable/ic_chevron_right_white_48dp"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:scaleX="-1"
                        android:layout_centerVertical="true"
                        android:alpha=".5"/>
                    <TextView
                        android:id="@+id/string_main_intro_5"
                        android:text="@string/string_main_intro_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimary"
                        android:textSize="26sp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-light"
                        android:padding="30dp"/>
                    <ImageView
                        android:id="@+id/right_arrow_5"
                        android:src="@drawable/ic_chevron_right_white_48dp"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:alpha=".5"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/view_pager_slide_6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/text_box_background"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                    <ImageView
                        android:id="@+id/left_arrow_6"
                        android:src="@drawable/ic_chevron_right_white_48dp"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:scaleX="-1"
                        android:layout_centerVertical="true"
                        android:alpha=".5"/>
                    <TextView
                        android:id="@+id/string_main_intro_6"
                        android:text="@string/string_main_intro_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimary"
                        android:textSize="26sp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-light"
                        android:padding="30dp"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.view.ViewPager>


        <LinearLayout
            android:id="@+id/layout_create_and_view_plan_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/button_open_select_training_plan_activity"
                android:text="create new plan"
                android:background="@color/buttonColor"
                android:textColor="@color/buttonText"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_margin="8dp"/>
            <Button
                android:id="@+id/button_open_list_training_plans_activity"
                android:text="view created plans"
                android:background="@color/buttonColor"
                android:textColor="@color/buttonText"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_margin="8dp"/>
        </LinearLayout>
</LinearLayout>
