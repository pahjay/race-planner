<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.race.planner.activities.MainActivity"
    android:background="@color/backgroundBlue"
    android:orientation="vertical">
    <TextView
        android:id="@+id/app_name"
        android:text="@string/app_name"
        android:textColor="@color/textPrimary"
        android:textSize="48dp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="24dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_above="@+id/layout_view_pager_navigation">

            <TextView
                android:id="@+id/string_main_intro_1"
                android:text="@string/string_main_intro_1"
                android:background="@color/buttonColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textPrimary"
                android:textSize="22sp"
                android:textAlignment="center"
                android:gravity="bottom"/>
            <TextView
                android:id="@+id/string_main_intro_2"
                android:text="@string/string_main_intro_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textPrimary"
                android:textSize="22sp"
                android:textAlignment="center"
                android:gravity="bottom"/>
            <TextView
                android:id="@+id/string_main_intro_3"
                android:text="@string/string_main_intro_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textAlignment="center"
                android:gravity="bottom"/>
            <TextView
                android:id="@+id/string_main_intro_4"
                android:text="@string/string_main_intro_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textAlignment="center"
                android:gravity="bottom"/>
        </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/layout_view_pager_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/layout_create_and_view_plan_buttons"
        android:paddingBottom="20dp">

        <ImageButton
            android:id="@+id/button_forward_view_pager"
            android:src="@drawable/ic_chevron_right_white_48dp"
            android:background="@null"
            android:alpha=".5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/text_view_more_info"
            android:text="@string/press_to_view_more"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:alpha=".5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_forward_view_pager"
            android:layout_toStartOf="@+id/button_forward_view_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/button_back_view_pager"
            android:src="@drawable/ic_chevron_right_white_48dp"
            android:background="@null"
            android:alpha=".5"
            android:scaleX="-1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_create_and_view_plan_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/button_open_select_training_plan_activity"
                android:text="create"
                android:background="@color/buttonColor"
                android:textColor="@color/textPrimary"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_margin="8dp"/>
            <Button
                android:id="@+id/button_open_list_training_plans_activity"
                android:text="view plans"
                android:background="@color/buttonColor"
                android:textColor="@color/textPrimary"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_margin="8dp"/>
        </LinearLayout>
</RelativeLayout>
