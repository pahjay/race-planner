<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.race.planner.fragments.SelectDateFragment"
                android:orientation="vertical"
                android:background="@android:color/transparent">
    <TextView
        android:id="@+id/date_title_text"
        android:text=""
        android:textColor="@color/textPrimary"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="99dp"
        android:fontFamily="sans-serif-light"
        />

    <TextView
        android:id="@+id/name_instructions"
        android:text="@string/date_instructions"
        android:textSize="32sp"
        android:textColor="@color/textPrimary"
        android:layout_below="@+id/date_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:background="@color/text_box_background"
        android:padding="10dp"
        android:fontFamily="sans-serif-light"/>

        <DatePicker
            android:id="@+id/date_picker_widget"
            android:layout_above="@id/inner_layout_menu_buttons"
            android:calendarTextColor="@color/textPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:scaleY="1"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_centerHorizontal="true"
            android:background="@color/textPrimary"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="48dp">
        </DatePicker>


    <RelativeLayout
        android:id="@+id/inner_layout_menu_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_margin="12dp">
        <ImageButton
            android:id="@+id/button_back"
            android:src="@drawable/ic_arrow_back_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:src="@drawable/ic_restart_white_48dp"
            android:id="@+id/button_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:src="@drawable/ic_arrow_forward_white_48dp"
            android:textColor="@color/textPrimary"
            android:background="@android:color/transparent"
            android:id="@+id/ok_confirm"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
