<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.race.planner.fragments.SelectNameFragment"
    android:background="@android:color/transparent"
    >

    <TextView
        android:id="@+id/name_title"
        android:text="Race Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textPrimary"
        android:textSize="14sp"
        android:layout_marginLeft="2dp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/name_instructions"
        android:text="@string/name_instructions"
        android:textSize="32sp"
        android:textColor="@color/textPrimary"
        android:layout_below="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:background="@color/text_box_background"
        android:padding="10dp"
        android:fontFamily="sans-serif-light"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter text here"
        android:textColorHint="#99ffffff"
        android:textSize="24sp"
        android:textColor="@color/textPrimary"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/name_instructions"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/inner_layout_menu_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp">
            <ImageButton
                android:id="@+id/button_back"
                android:src="@drawable/ic_arrow_back_white_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
            <ImageButton
                android:text="restart"
                android:src="@drawable/ic_restart_white_48dp"
                android:id="@+id/button_restart"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
            <ImageButton
            android:id="@+id/button_confirm"
            android:src="@drawable/ic_arrow_forward_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
